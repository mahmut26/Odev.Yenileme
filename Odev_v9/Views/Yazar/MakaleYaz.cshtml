@using DataLayer.Model_VM
@model MakaleViewModel

@{
    ViewData["Title"] = "Makale Yaz";
}

<h2>Makale Yaz</h2>

<form asp-action="Yaz" method="post">
    <div class="form-group">
        <label asp-for="Baslik" class="control-label"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Icerik" class="control-label"></label>
        <textarea asp-for="Icerik" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Icerik" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cat" class="control-label"></label>
        <input asp-for="Cat" class="form-control" />
        <span asp-validation-for="Cat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Yaz" class="control-label"></label>
        <input asp-for="Yaz" class="form-control" />
        <span asp-validation-for="Yaz" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Gönder</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
